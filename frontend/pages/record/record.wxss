/* pages/record/record.wxss */

.stats-section {
  margin-bottom: 30rpx;
}

.stats-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.stats-grid {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-number {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.records-section {
  margin-bottom: 30rpx;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
}

.month-group {
  margin-bottom: 40rpx;
}

.month-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.month-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.month-count {
  font-size: 24rpx;
  color: #666;
  background: #f0f0f0;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.records-list {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
}

.record-item {
  border-bottom: 2rpx solid #f8f9fa;
}

.record-item:last-child {
  border-bottom: none;
}

.record-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}

.record-left {
  flex: 1;
}

.record-type {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.type-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.type-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.record-time {
  margin-bottom: 12rpx;
}

.record-date {
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
}

.record-hour {
  font-size: 24rpx;
  color: #999;
}

.record-note {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  background: #f8f9fa;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  margin-top: 12rpx;
}

.record-actions {
  margin-left: 20rpx;
}

.delete-btn {
  background: #ff4d4f;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  line-height: 1;
}

.action-section {
  margin-bottom: 30rpx;
}

.clear-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  background: #ff4d4f;
  color: white;
} 