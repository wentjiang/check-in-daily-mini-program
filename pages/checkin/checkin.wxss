/* pages/checkin/checkin.wxss */

.time-section {
  text-align: center;
  margin-bottom: 30rpx;
}

.time-display {
  margin-bottom: 20rpx;
}

.current-time {
  font-size: 60rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.current-date {
  font-size: 28rpx;
  color: #666;
}

.checkin-status {
  margin-top: 20rpx;
}

.status-text {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  background: #f0f0f0;
  color: #666;
  display: inline-block;
}

.status-text.checked {
  background: #e8f5e8;
  color: #52c41a;
}

.type-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.type-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.type-item {
  text-align: center;
  padding: 30rpx 20rpx;
  border-radius: 16rpx;
  background: #f8f9fa;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.type-item.selected {
  background: #e8f5e8;
  border-color: #52c41a;
}

.type-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.type-label {
  font-size: 24rpx;
  color: #333;
}

.custom-input-section {
  margin-top: 20rpx;
}

.custom-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.note-section {
  margin-bottom: 30rpx;
}

.note-textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  resize: none;
}

.note-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.action-section {
  margin-bottom: 30rpx;
}

.checkin-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}

.checkin-btn.disabled {
  background: #f0f0f0;
  color: #999;
}

.view-record-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

.tips-section {
  margin-bottom: 30rpx;
}

.tips-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tips-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.tip-item {
  margin-bottom: 10rpx;
} 